PORT=5000
MONGO_URI=mongodb://localhost:27017/auth_db
JWT_SECRET=your_jwt_secret_key_here

# Mobile-only signup email alias domain (used to avoid null email unique conflicts)
MOBILE_ALIAS_DOMAIN=mobile.local

# SMTP Configuration (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM="nirvistra <no-reply@example.com>"

# Twilio Configuration (Mobile)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# PhonePe Configuration (Payment Gateway)
PHONEPE_MERCHANT_ID=your_phonepe_merchant_id
PHONEPE_SALT_KEY=your_phonepe_salt_key
PHONEPE_SALT_INDEX=1
PHONEPE_BASE_URL=https://api-preprod.phonepe.com/apis/pg-sandbox
PHONEPE_CALLBACK_URL=https://your-domain.com/api/payments/phonepe/callback


# Razorpay Configuration (alternative gateway)
# Base URL is optional; defaults to https://api.razorpay.com if not set
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# PayU Configuration
PAYU_KEY=your_payu_key
PAYU_SALT=your_payu_salt
PAYU_BASE_URL=https://test.payu.in/_payment
PAYU_SUCCESS_URL=https://your-domain.com/api/payments/payu/response
PAYU_FAILURE_URL=https://your-domain.com/api/payments/payu/response

# ICO Token Settings
ICO_TOKEN_SYMBOL=ICOX
ICO_PRICE_INR=10

# Wallet Settings
WALLET_MIN_TOPUP_AMOUNT=10
WALLET_MAX_TOPUP_AMOUNT=200000
WALLET_MIN_WITHDRAW_AMOUNT=100
