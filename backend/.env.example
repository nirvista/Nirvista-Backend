CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_KYC_FOLDER=ico/kyc
CLOUDINARY_PROFILE_FOLDER=ico/profile
KYC_UPLOAD_MAX_MB=5

# Referral
